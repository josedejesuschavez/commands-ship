#!/bin/bash

folder_Custom_Commands="$HOME/.customCommands2"

scriptdot="dot"

rm -rf "$folder_Custom_Commands/commands"

mkdir "$folder_Custom_Commands/commands"

for module in $(ls "$DOTFILES_PATH/scripts"); do
    if [ "$module" != "$scriptdot" ]; then
    	cp -R "$DOTFILES_PATH/commands/$module" "$folder_Custom_Commands/$module"
    fi
done

cd "$folder_Custom_Commands"

git pull origin $(git rev-parse --abbrev-ref HEAD)
git add .
git commit -m 'Update Commands'
git push origin HEAD