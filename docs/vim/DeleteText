#!/bin/bash

echo "vim"
echo ""
echo "Description:"
echo "Delete text"
echo ""
echo "x   -> delete (cut) character"
echo "dw  -> delete (cut) the characters of the word from the" 
echo "      cursor position to the start of the next word"
echo "de  -> delete (cut) the characters of the word from the"
echo "      cursor position to the end the current word"
echo "d$  -> delete (cut) to the end of the line"
echo "db  -> delete back to the beginning of the word"
echo "dd  -> delete (cut) a line"
echo "dh  -> delete one left character"
echo "dj  -> delete current line and one down line"
echo "dk  -> delete current line and one up line"
echo "dl  -> delete one right character"
echo "d6w -> Execute command dw 6 times"
